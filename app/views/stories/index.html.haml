%h3 Stories:

.btn
  = link_to 'New story', new_story_path

// .table.table-hover

%table.table.table-striped.table-bordered.table-condensed
  %tr
    %th Title:
    %th Text:
    %th
    %th
    %th
    - @stories.each do |story|
      %tr
        %td= link_to h(story.title), story
        %td= simple_format h(story.description)
        %td= render story.tags
        %td
          .btn.btn-warning
            = link_to 'Edit', edit_story_path(story)
        %td
          .btn.btn-danger
            = link_to 'Destroy', story_path(story),
                                  method: :delete,
                                  data: { confirm: 'Are you sure?' }
