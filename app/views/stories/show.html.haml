%h3 Title:
%p= @story.title
%h3 Description:
%p= @story.description
.story_author
  %h3 Created by
  %p= @story.user.name

= link_to 'Stories', stories_path, :class => 'btn'

= link_to 'Edit', edit_story_path(@story), :class => 'btn btn-warning'

= link_to 'Destroy', story_path(@story), :class => 'btn btn-danger',
						method: :delete, 
						data: { confirm: 'Are you sure?' }
